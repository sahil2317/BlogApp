<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class ="ui huge header">New LoveBlog</div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type ="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type ="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Post Blog</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <div class="field">
            <input type="submit" class="ui purple big basic button">
        </div>
      
    </form>
</div> 



